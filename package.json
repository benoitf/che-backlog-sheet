  "dependencies": {
    "@octokit/rest": "^18.0.3",
    "@octokit/types": "^5.4.0",
    "@types/fs-extra": "^9.0.1",
    "@types/gapi": "^0.0.39",
    "@types/gapi.client.sheets": "^4.0.9",
    "coffeescript": "^2.5.1",
    "cron": "^1.8.2",
    "fs-extra": "^9.0.1",
    "githubot": "^1.0.1",
    "googleapis": "^59.0.0",
    "hubot": "^3.3.2",
    "hubot-matteruser": "^5.3.1",
    "jira-connector": "^3.1.0",
    "node": "^14.8.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.12",
    "@types/cron": "^1.7.2",
    "@types/hubot": "^3.3.0",
    "@types/mocha": "^8.0.2",
    "@types/request": "^2.48.5",
    "@types/semver": "^7.3.3",
    "axios": "^0.21.2",
    "chai": "^4.2.0",
    "codecov": "^3.7.2",
    "mocha": "^8.1.1",
    "nyc": "^15.1.0",
    "semver": "^7.3.2",
    "ts-mockito": "^2.6.1",
    "ts-node": "^8.10.2",
    "tslint": "^6.1.3",
    "typescript": "^3.9.7",
    "typescript-formatter": "^7.2.2"
  },
  "scripts": {
    "ci": "yarn run build && yarn run report",
    "build": "yarn run test && yarn run format-code && yarn run compile && yarn run tslint",
    "report": "nyc report --reporter=json && codecov -f coverage/*.json",
    "compile": "tsc --project .",
    "format-code": "tsfmt -r",
    "tslint": "tslint --fix src/*.ts src/**/*.ts",
    "test": "nyc mocha",
    "testold": "mocha --compilers ts:ts-node/register tests/*test.ts"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
